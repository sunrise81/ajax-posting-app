<div id="post-<%= post.id %>" class="panel panel-default">
  <div class="panel-heading"><%= post.user.display_name %></div>
  <div class="panel-body">
    <span id="post-thumbsup-<%= post.id %>" class="label label-success"><%= post.likes.count %> üëç</span>
    <%= post.content %>

 <div id="post-like-<%= post.id %>" class="text-right">

      <%= render :partial => "like", :locals => { :post => post } %>

</div>

         <div class="text-right">


               <% if current_user && post.user == current_user %>
             <p class="text-right" >
               <%= link_to "Delete", post_path(post), :method => :delete,  :class => "btn btn-danger", :remote => true %>
             </p>
           <% end %>
          </div>

 <div class="text-right">
          <span id="post-collection-<%= post.id %>" >
            <%= render :partial => "collection", :locals => { :post => post } %>
          </span>

</div>

</div>
